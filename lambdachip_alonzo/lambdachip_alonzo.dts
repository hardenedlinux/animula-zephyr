/dts-v1/;
#include <st/f4/stm32f411Xe.dtsi>
/* #include "arduino_r3_connector.dtsi" */

/* Alonzo v0.0.5 */

/ {
	model = "Lambdachip Alonzo";
	compatible = "st,stm32f411";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		led_0: led_0 {
			gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
			label = "User LED0";
		};

		led_1: led_1 {
			gpios = <&gpioc 14 GPIO_ACTIVE_HIGH>;
			label = "User LED1";
		};
		led_2: led_2 {
			gpios = <&gpioc 15 GPIO_ACTIVE_HIGH>;
			label = "User LED2";
		};
		led_3: led_3 {
			gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>;
			label = "User LED3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "Key";
			gpios = <&gpioa 1 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &led_0;
		sw0 = &user_button;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&timers2 {
	status = "okay";

	pwm {
		status = "okay";
	};
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&i2c2 {
	clock-frequency = <I2C_BITRATE_FAST>;
};

&i2c3 {
	clock-frequency = <I2C_BITRATE_FAST>;
};

/* &spi1 {
	status = "okay";
}; */

&rtc {
	status = "okay";
};

&usbotg_fs {
	status = "okay";
};


&spi1 {
